use_frameworks!

platform :ios, '12.0'

target 'PushedMessagingiOSLibrary_Example' do
  pod 'PushedMessagingiOSLibrary', :path => '../'

  target 'PushedMessagingiOSLibrary_Tests' do
    inherit! :search_paths

    
  end
  
  # Notification Service Extension Target
  # –°–æ–∑–¥–∞–π—Ç–µ target 'AppNotiService' –≤ Xcode —Å–ª–µ–¥—É—è –∏–Ω—Å—Ç—Ä—É–∫—Ü–∏—è–º –≤ SETUP_EXTENSION.md
  # –ó–∞—Ç–µ–º —Ä–∞—Å–∫–æ–º–º–µ–Ω—Ç–∏—Ä—É–π—Ç–µ —ç—Ç–∏ —Å—Ç—Ä–æ–∫–∏:
  #
  # target 'AppNotiService' do
  #   # Extension –Ω–µ —Ç—Ä–µ–±—É–µ—Ç –¥–æ–ø–æ–ª–Ω–∏—Ç–µ–ª—å–Ω—ã—Ö pods
  # end
end

# Post-install hook –¥–ª—è –∞–≤—Ç–æ–º–∞—Ç–∏—á–µ—Å–∫–æ–π –Ω–∞—Å—Ç—Ä–æ–π–∫–∏
post_install do |installer|
  puts ""
  puts "üìã –ù–µ –∑–∞–±—É–¥—å—Ç–µ —Å–æ–∑–¥–∞—Ç—å Notification Service Extension target!"
  puts "üìñ –ò–Ω—Å—Ç—Ä—É–∫—Ü–∏–∏: Example/SETUP_EXTENSION.md"
  puts ""
  
  installer.pods_project.targets.each do |target|
    target.build_configurations.each do |config|
      config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '12.0'
    end
  end
end
